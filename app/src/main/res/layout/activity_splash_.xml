<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Splash_Activity">


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.55" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.50" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.60" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="330dp"
        android:layout_height="230dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/uni"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textUni"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="340dp"
        android:text="دانشگاه آزاد اسلامی"
        android:textColor="#3949AB"
        android:textSize="35dp"
        app:layout_constraintLeft_toLeftOf="@id/guidelineH"
        app:layout_constraintRight_toRightOf="@id/guidelineH"
        app:layout_constraintBottom_toBottomOf="@id/guideline1"
        app:layout_constraintTop_toTopOf="@id/guideline1"

        />

    <TextView
        android:id="@+id/textUnit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:text="واحد خرم آباد"
        android:textColor="#3949AB"
        android:textSize="30dp"
        app:layout_constraintLeft_toLeftOf="@id/guidelineH"
        app:layout_constraintRight_toRightOf="@id/guidelineH"
        app:layout_constraintBottom_toBottomOf="@id/guideline2"
        app:layout_constraintTop_toTopOf="@id/guideline2"
        />
    <TextView
        android:id="@+id/textMaster"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="79dp"
        android:paddingLeft="3dp"
        android:text="    دکتر  نبی پور"
        android:textColor="#3949AB"
        android:textSize="22dp"
        android:textStyle="italic"
        app:layout_constraintLeft_toLeftOf="@id/guidelineH"
        app:layout_constraintRight_toRightOf="@id/guidelineH"
        app:layout_constraintBottom_toBottomOf="@id/guideline3"
        app:layout_constraintTop_toTopOf="@id/guideline3"/>
</androidx.constraintlayout.widget.ConstraintLayout>